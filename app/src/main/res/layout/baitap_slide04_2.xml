<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgAvata"
            android:background="@mipmap/ngoctring"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgAvata"
            android:text="Ngọc Trinh"
            android:textColor="#3d3d3d"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/txtAge"

            style="@style/bai04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtten"
            android:layout_toRightOf="@id/imgAvata"
            android:text="Age       28" />

        <TextView
            android:id="@+id/txtMobile"
            style="@style/bai04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAge"
            android:layout_toRightOf="@id/imgAvata"
            android:text="Mobile  09888888888" />

        <TextView
            android:id="@+id/txtEmail"
            style="@style/bai04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMobile"
            android:layout_toRightOf="@id/imgAvata"
            android:text="Email  ngoctrinh@gmail.com" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="6dp"
        android:background="#484646"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtEDu"
            android:textSize="20sp"
            android:textColor="#484646"
            android:text="EDUCATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="6dp"
            android:id="@+id/txtChitietEdu"
            android:text="Thi trượt cấp 3,không học cấp 3 đi chụp ảnh người mẫu
Toeic 0, "
            android:layout_toRightOf="@id/txtEDu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtSki"
            android:textSize="20sp"
            android:textColor="#484646"
            android:text="SKILLS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="53dp"
            android:id="@+id/txtChitietSki"
            android:text="chụp ảnh tự sướng ...., làm người  mẫu, dánh đẹp, mặt xinh, chân dài, kiếm được nhiều tiền..............................."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtSki"
            android:layout_toEndOf="@+id/txtSki"
            android:layout_marginStart="53dp" />

    </RelativeLayout>
</LinearLayout>