<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:text="Hình ảnh"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    style="@style/bai05_slide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:background="@mipmap/anha"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <TextView
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Tải ảnh lên"
            android:textColor="#cc5050"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <TextView
        android:background="#5e5d5d"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtChebien"
            android:text="Che biển số"
            style="@style/bai05_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbCo"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            style="@style/bai05_slide"
            android:layout_toRightOf="@+id/rbCo"
            android:text="Có"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbKo"
            android:layout_marginLeft="170dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            style="@style/bai05_slide"
            android:layout_toRightOf="@+id/rbKo"
            android:text="Không"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:background="#5e5d5d"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        style="@style/bai05_slide"
        android:text="Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="16sp"
        android:hint="Nhập link email của bạn"
        android:background="@drawable/sproto"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/sp_bai3">

        <TextView
            android:id="@+id/txthangxe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Hãng xe"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imgDaulon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/daulonhon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/sp_bai3">

        <TextView
            android:id="@+id/txtLoaixe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Loại xe"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imgDaulon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/daulonhon" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/sp_bai3">

        <TextView
            android:id="@+id/txtNXS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Năm sản xuất"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imgDaulon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/daulonhon" />


    </RelativeLayout>
    <TextView
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:text="Phiên bản"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:background="#5e5d5d"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtXX"
            android:text="Xuất xứ: "
            style="@style/bai05_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbTN"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            style="@style/bai05_slide"
            android:layout_toRightOf="@+id/rbTN"
            android:text="Trong nước"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbNK"
            android:layout_marginLeft="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            style="@style/bai05_slide"
            android:layout_toRightOf="@+id/rbNK"
            android:text="Nhập Khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtTT"
            android:text="Tình trạng: "
            style="@style/bai05_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbTT"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            style="@style/bai05_slide"
            android:layout_toRightOf="@+id/rbTT"
            android:text="Mới"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rbcu"
            android:layout_marginLeft="220dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            style="@style/bai05_slide"
            android:layout_toRightOf="@+id/rbcu"
            android:text="Cũ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="8dp"
        android:background="#5e5d5d"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mầu nội thất"
            android:textColor="#3d3b3b" />

        <ImageView
            android:id="@+id/imgDaulon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/daulonhon" />
    </RelativeLayout>
</LinearLayout>
