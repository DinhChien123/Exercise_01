<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:textColor="#464444"
    android:textSize="16sp"
    android:text="Hãy nhập vào Email bạn đã đăng kí với Githut. Chúng tôi sẽ gửi Email để lấy lại Email cho bạn."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:textColor="#2e2e2e"
    android:textSize="16sp"
    android:text="Hãy nhập đúng Email của bạn"
    android:layout_marginTop="75dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtEmail"
        android:layout_marginTop="10dp"
        android:background="@drawable/sproto"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <Button
        android:background="@drawable/sp_dangnhap"
        android:layout_marginTop="18sp"
        android:layout_gravity="center"
        android:inputType="textCapWords"
        android:text="Lấy lại mật khẩu"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>